<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#212121"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="SmartLock"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Utilisateur: [Nom]"
            android:id="@+id/username"
            android:textSize="20sp"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="10sp"
            android:layout_margin="10dp"
            android:background="#73687d"
            android:layout_marginTop="60dp"
            android:textColor="@color/white"
            tools:ignore="HardcodedText">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Armoire: [Fermée]"
            android:drawableLeft="@drawable/baseline_lock_logo"
            android:drawablePadding="10sp"
            android:background="#825753"
            android:layout_margin="10dp"
            android:id="@+id/state"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            tools:ignore="HardcodedText">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ventilation: [Désactivée]"
            android:drawableLeft="@drawable/baseline_cyclone_24"
            android:drawablePadding="10sp"
            android:background="#825753"
            android:layout_margin="10dp"
            android:id="@+id/vent"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            tools:ignore="HardcodedText">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Bluetooth: [Indisponible]"
            android:drawableLeft="@drawable/baseline_bluetooth_24"
            android:drawablePadding="10sp"
            android:background="#825753"
            android:layout_margin="10dp"
            android:id="@+id/bluetooth"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            tools:ignore="HardcodedText">
        </TextView>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Besoin d'aide ?"
        android:textColor="#858585"
        android:textSize="25sp"
        android:id="@+id/needHelp"
        android:layout_marginTop="550dp"
        android:clickable="true"
        android:onClick="needHelp"
        android:gravity="center">
    </TextView>

    <ImageButton
        android:id="@+id/lockButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="100dp"
        android:translationY="300dp"
        android:src="@drawable/baseline_lock_24"
        android:background="@drawable/button_background"
        android:onClick="changeImageButton" />



</RelativeLayout>