<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Besoin d'aide ?"
        android:textColor="#FFFFFF"
        android:layout_marginTop="-500sp"
        android:gravity="center"
        android:textSize="25dp">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="1. Le Bluetooth est t-il activé sur votre appareil ? Pour l'activer, rendez vous dans
Paramètres, Bluetooth et activez le."
        android:textColor="#858585"
        android:layout_marginTop="-350sp"
        android:gravity="center"
        android:textSize="20dp">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="2. Le système SmartLock est-il bien branché ? Si c'est le cas, la LED devrait s'allumer."
        android:textColor="#858585"
        android:layout_marginTop="-170sp"
        android:gravity="center"
        android:textSize="20dp">
    </TextView>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Si vous avez encore des problèmes d'ouverture, contactez le service de maintenance."
        android:textColor="#858585"
        android:layout_marginTop="500sp"
        android:gravity="center"
        android:textSize="15dp">
    </TextView>


</RelativeLayout>